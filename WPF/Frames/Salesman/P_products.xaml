            <Button x:Name="b_prd_list"  Height="32" Margin="5 0 5 0" Click="Bto_list"  >Список продуктов</Button>
            <!--<Button x:Name="b_prd_upade"  Height="32" Margin="5 0 5 0" Click="Bto_update_Product" >Изменить товар</Button>-->
            <Button x:Name="b_prd_insert"  Height="32" Margin="5 0 5 0" Click="Bto_add"  >Добавить товар</Button>
        </StackPanel>
        <Frame x:Name="spase" Grid.Row="1">

        </Frame>
    </Grid>

</Page>
