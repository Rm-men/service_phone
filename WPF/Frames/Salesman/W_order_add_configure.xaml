<Window x:Class="WPF.Frames.Salesman.W_order_add_configure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Frames.Salesman"
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

        mc:Ignorable="d"
        Title="W_order_add_configure" Height="120" Width="400">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0,5*"/>
            <RowDefinition Height="0,5*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Label x:Name="TB_Count"   materialDesign:HintAssist.Hint="Количество" HorizontalAlignment="Center" 
                 Padding="2 5 0 0 " FontSize="16"  Cursor="IBeam">Вы действительно хотиде удалить товар из списка?</Label>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5 0 5 0" >
            <Button x:Name="B_delete" Margin="5 0 5 0"  Content="Удалить" Height="30" Background="#FF9B8686" Click="Delete"></Button>
            <Button x:Name="B_close" Margin="5 0 5 0"  Content="Отмена" Height="30" Background="#FF8BA088" Click="Close"></Button>
        </StackPanel>
    </Grid>
</Window>
